<h1><%= @workout.name %></h1>
<div>
  <% if session[:id] == @workout.user_id %>
    <a href="/workouts/<%=@workout.id%>/edit">Edit Workout</a><br>
    <a href="/workouts/<%=@workout.id%>/delete">Delete Workout</a>
  <% end %> 
</div>

<h2>Exercises: </h2>
  <% @workout.exercises.each_with_index do |exercise, i| %>
    <%= i+1 %>. Name: <%= exercise.name %><br>
    Description: <%= exercise.description %><br>
  <% end %>
<div>
  <h2>Requires: </h2>
  <% @workout.items.each do |item| %>
    <%= item.name %><br>
  <% end %>
</div>


<h2>Not for you? </h2>
<a href="/workouts">Back to all workouts</a><br>
<a href="/workouts/<%=@workouts.sample.id%>">Randomize me!</a>
